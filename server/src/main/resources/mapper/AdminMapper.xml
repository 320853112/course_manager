<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.denghuo.course_manage.dao.AdminDAO">
    <update id="updateAdmin" parameterType="Admin">
        update admin
        <trim prefix="set" suffixOverrides=",">
            <if test="username!=null">
                username = #{username},
            </if>
            <if test="password!=null">
                password = #{password},
            </if>
        </trim>
        where id = #{id}
    </update>

    <insert id="insertAdmin">
        insert into admin
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="username!=null">
                username,
            </if>
            <if test="password!=null">
                password,
            </if>
        </trim>
        <trim prefix="values(" suffixOverrides="," suffix=")">
            <if test="username!=null">
                #{username},
            </if>
            <if test="password!=null">
                #{password},
            </if>
        </trim>
    </insert>

    <delete id="deleteAdmin" parameterType="Integer">
        delete from admin where id = #{id}
    </delete>

    <select id="getAdmin" parameterType="String" resultType="Admin">
        select id,username,password from admin where username = #{username}
    </select>


</mapper>
