<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.denghuo.course_manage.dao.CourseDAO">
    <update id="updateCourse" parameterType="Course">
        update course
        <trim prefix="set"  suffixOverrides=",">
            <if test="category!=null">
                category = #{category},
            </if>
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="time_week!=null">
                time_week = #{time_week},
            </if>
            <if test="credit!=null">
                credit = #{credit},
            </if>
            <if test="teacher!=null">
                teacher  =#{teacher},
            </if>
            <if test="surplus!=null">
                surplus = #{surplus},
            </if>
        </trim>
        where id = #{id}
    </update>

    <insert id="insertCourse" parameterType="Course">
        insert into course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="category!=null">
                category ,
            </if>
            <if test="name!=null">
                name,
            </if>
            <if test="time_week!=null">
                time_week,
            </if>
            <if test="credit!=null">
                credit,
            </if>
            <if test="teacher!=null">
                teacher,
            </if>
            <if test="surplus!=null">
                surplus,
            </if>
        </trim>
          <trim prefix="values(" suffix=")" suffixOverrides=",">
              <if test="category!=null">
                  #{category},
              </if>
              <if test="name!=null">
                  #{name},
              </if>
              <if test="time_week!=null">
                  #{time_week},
              </if>
              <if test="credit!=null">
                  #{credit},
              </if>
              <if test="teacher!=null">
                  #{teacher},
              </if>
              <if test="surplus!=null">
                  #{surplus},
              </if>
          </trim>
    </insert>

    <delete id="deleteCourse" parameterType="int">
        delete from course where id = #{id}
    </delete>

    <select id="getCourse" parameterType="map" resultType="Course">
        select * from course where
        <trim suffixOverrides="and">
            1=1 and
            <if test="course.id!=null">
                id = #{course.id} and
            </if>
            <if test="course.category!=null">
                category = #{course.category} and
            </if>
            <if test="course.name!=null">
                name = #{course.name} and
            </if>
            <if test="course.time_week!=null">
                time_week = #{course.time_week} and
            </if>
            <if test="course.credit!=null">
                credit = #{course.credit} and
            </if>
            <if test="course.teacher!=null">
                teacher  =#{course.teacher} and
            </if>
            <if test="course.surplus!=null">
                surplus = #{surplus} and
            </if>
        </trim>
        limit #{startNum},#{pageSize}

    </select>


</mapper>